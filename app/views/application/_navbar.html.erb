<nav class="navbar <%= authenticated? ? 'navbar-inverse' : 'navbar-default' %>">
  <div class="container">

    <div class="navbar-header">
      <button
        type="button"
        class="navbar-toggle collapsed"
        data-toggle="collapse"
        data-target="#main_navbar"
        aria-expanded="false"
